{
  "mcpServers": {
    "context7": {
      "command": "node",
      "args": [
        "context7-mcp/dist/index.js"
      ],
      "disabled": false,
      "autoApprove": [
        "mcp_context7_resolve_library_id",
        "mcp_context7_get_library_docs",
        "resolve-library-id",
        "get-library-docs"
      ]
    },
    "sqlite": {
      "command": "uvx",
      "args": [
        "mcp-server-sqlite",
        "--db-path",
        "database.sqlite"
      ],
      "disabled": false,
      "autoApprove": [
        "mcp_sqlite_read_query",
        "mcp_sqlite_write_query",
        "mcp_sqlite_create_table",
        "mcp_sqlite_list_tables",
        "mcp_sqlite_describe_table",
        "list_tables",
        "list_tables",
        "list_tables",
        "list_tables",
        "list_tables",
        "list_tables"
      ]
    },
    "fetch": {
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ],
      "disabled": false,
      "autoApprove": [
        "mcp_fetch_fetch",
        "fetch"
      ]
    },
    "git": {
      "command": "uvx",
      "args": [
        "mcp-server-git",
        "--repository",
        "."
      ],
      "disabled": false,
      "autoApprove": [
        "mcp_git_git_status",
        "mcp_git_git_diff_unstaged",
        "mcp_git_git_add",
        "mcp_git_git_commit",
        "git_status"
      ]
    },
    "supabase-mcp": {
      "transport": {
        "type": "http",
        "url": "https://server.smithery.ai/@supabase-community/supabase-mcp/mcp?api_key=f78f7ac6-7b91-4f89-829e-f8d13010dc0c&profile=fierce-gecko-huw3eE"
      },
      "disabled": false,
      "autoApprove": [
        "supabase_query",
        "supabase_insert", 
        "supabase_update",
        "supabase_delete",
        "supabase_list_tables",
        "supabase_describe_table"
      ]
    }
  }
}